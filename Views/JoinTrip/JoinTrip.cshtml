@model ShareForceOne.Models.JoinTripModel

@{
    ViewData["Title"] = "JoinTrip";
}

<h4>Join Trip</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="JoinTrip">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TripId" class="control-label"></label>
                <label asp-for="TripId" class="control-label">@ViewBag.aTripId</label>
                <input type="hidden" asp-for="TripId" class="form-control" value="@ViewBag.aTripId" />
                <span asp-validation-for="TripId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="UserId" class="control-label"></label>*@
                <input type="hidden" asp-for="UserId" class="form-control" value="@ViewBag.loggedInUser" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JoinTripNotes">Custom Information</label>
                <textarea class="form-control" asp-for="JoinTripNotes" rows="5"></textarea>
            </div>
            @*<div class="form-group">
                    <label asp-for="JoinTripNotes" class="control-label"></label>
                    <input asp-for="JoinTripNotes" class="form-control" />
                    <span asp-validation-for="JoinTripNotes" class="text-danger"></span>
                </div>*@
        <div class="form-group">
            <input type="submit" value="Join" onclick="Joined()" class="btn btn-primary" />
            <script>
                function Joined() {
                    alert("Successfully joined the trip!");
                }
            </script>
        </div>
        </form>
    </div>
</div>

